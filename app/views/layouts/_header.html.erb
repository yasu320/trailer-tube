<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <%= link_to "Trailer Tube", root_path, class:"navbar-brand" %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavDropdown">
      <ul class="navbar-nav mr-auto">　
        <li class="nav-item">
          <!-- Button trigger modal -->
          <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#exampleModalLong">
            About
          </button>
      </ul>
      <ul class="navbar-nav">
        <% if user_signed_in? %>
          <li class="nav-item dropdown active">
            <a class="nav-link dropdown-toggle" href="#" id="dropdown01" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">アカウント</a>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdown01">
              <%= link_to 'プロフィール', user_path(current_user), class:"dropdown-item" %>
              <%= link_to '設定', edit_user_registration_path, class:"dropdown-item" %>
              <div class="dropdown-divider"></div>
              <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item active">
            <%= link_to 'ログイン', new_user_session_path, class:"nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </nav>
</header>

<!-- Modal -->
<div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        YouTubeから取得した映画予告に対してレビューと評価を行えるSNSです。
         <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        YouTube APIから映画予告の動画を取得し、それに対してレビューと評価を行えるサイトです。
        https://github.com/yasu320/trailer-tube
      </div>
    </div>
  </div>
</div>
