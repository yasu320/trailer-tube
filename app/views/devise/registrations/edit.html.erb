<div class="container">
  <div class="view-account">
    <section class="module">
      <div class="module-inner">
        <div class="side-bar">
          <div class="user-info">
            <% if @user.provider == 'facebook' %>
              <%= image_tag @user.image + "?type=large", size: '150x150' %>
            <% elsif @user.provider == 'twitter' %>
              <%= image_tag @user.image.gsub!("_normal",""), size: '150x150' %>
            <% else %>
              <%= holder_tag '150x150', 'アイコン' %>
            <% end %>
            <ul class="meta list list-unstyled">
              <li class="name">
                <%= @user.username %>
              </li>
            </ul>
          </div>
          <nav class="side-menu">
            <ul class="nav">
              <li><%= link_to user_path(current_user) do %>
                  <%= fa_icon("user lg")%> プロフィール
                <% end %>
              </li>
              <li class="active"><%= link_to edit_user_registration_path do %>
                  <%= fa_icon("cog lg")%> 設定
                <% end %>
              </li>
              <% if @user.provider == nil %>
                <li><%= link_to password_change_users_path do %>
                    <%= fa_icon("lock lg")%> パスワードを変更
                  <% end %>
                </li>
              <% end %>
            </ul>
          </nav>
        </div>

        <div class="content-panel">
          <div class="content-header-wrapper">
            <h2 class="title">プロフィールを編集</h2>
          </div>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <form>
              <div class="form-group row">
                  <%= f.label :username, 'ユーザーネーム', class: "col-sm-3 col-form-label"%>
                <div class="col-sm-6">
                  <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control" %>
                </div>
              </div>
              <div class="form-group row">
                  <%= f.label :email, 'メールアドレス', class: "col-sm-3 col-form-label"%>
                <div class="col-sm-6">
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
                </div>
              </div>
              <div class="form-group row">
                <div class="offset-sm-3 col-sm-10">
                  <%= f.submit "送信する", class: "btn btn-primary" %>
                </div>
              </div>
            </form>
          <% end %>
          <div class="row">
            <div class="offset-sm-3 col-sm-10">
              <p><%= button_to "アカウントを削除", registration_path(resource_name), data: { confirm: "本当に削除しますか?" }, method: :delete %></p>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</div>
