<% provide(:title, "ログイン") %>
<article class="card-body mx-auto">
  <h4 class="card-title mt-3 text-center">ログイン</h4>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="alert"><%= alert %></div>

    <div class="form-group input-group">
      <div class="input-group-prepend">
        <span class="input-group-text"><%= fa_icon("user lg") %></span>
      </div>
      <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control", placeholder:"ユーザーネーム" %>
    </div> <!-- form-group// -->
    <div class="form-group input-group">
      <div class="input-group-prepend">
        <span class="input-group-text"><%= fa_icon("envelope") %></span>
      </div>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder:"メールアドレス" %>
    </div> <!-- form-group// -->
    <div class="form-group input-group">
      <div class="input-group-prepend">
        <span class="input-group-text"><%= fa_icon("lock lg") %></span>
      </div>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder:"パスワード" %>
    </div> <!-- form-group// -->
    <div class="form-group">
      <%= f.submit "ログイン", class: "btn btn-primary btn-block" %>
    </div> <!-- form-group// -->
    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, 'ログイン情報を保存' %>
      </div>
    <% end %>
  <% end %>
  <p class="divider-text">
    <span class="bg-white">または</span>
  </p>

  <div class="devise-links"><%= render "devise/shared/links" %></div>

  <p class="text-center">アカウントをお持ちでないですか？<%= link_to "登録する", new_user_registration_path %></p>
</article>
